{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "contributors": [
    "Pavel Denisjuk <pavel@webiny.com>",
    "Sven Al Hamad <sven@webiny.com>",
    "Adrian Smijulj <adrian@webiny.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/webiny/webiny-js.git"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-subset": "^1.6.0",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-lerna-changelog": "^1.2.1",
    "documentation": "^5.3.5",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.3.0",
    "get-stream": "^3.0.0",
    "git-log-parser": "^1.2.0",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.1",
    "mocha": "^5.0.0",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.0"
  },
  "scripts": {
    "build": "lerna run --parallel build",
    "ci": "nyc --check-coverage yarn test && nyc report --reporter=text-lcov | coveralls",
    "clear": "lerna exec -- rimraf lib",
    "client:watch": "lerna run --scope=webiny-client-ui --scope=webiny-client --scope=webiny-skeleton-app --scope=webiny-backend-app --parallel --stream build:watch",
    "commit": "git-cz",
    "commit:check": "yarn lint-staged && yarn test",
    "coverage": "scripts/coverage.js --reporter=text",
    "coverage:html": "scripts/coverage.js --reporter=html",
    "coverage:check": "scripts/coverage.js --check=true",
    "flow": "flow",
    "lint-staged": "lint-staged",
    "prettier": "prettier --config .prettierrc.js --write",
    "release": "scripts/release.js",
    "release:dry": "scripts/release.js --preview --branch=development",
    "release-private": "node scripts/private --branch=development --require=babel-register",
    "release-private:dry": "node scripts/private --preview --branch=development --require=babel-register",
    "test": "scripts/test.js"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}

{
    "private": true,
    "workspaces": [
        "packages-api/*",
        "packages-client/*",
        "packages-utils/*"
    ],
    "contributors": [
        "Pavel Denisjuk <pavel@webiny.com>",
        "Sven Al Hamad <sven@webiny.com>",
        "Adrian Smijulj <adrian@webiny.com>"
    ],
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "chai": "^4.1.2",
        "commitizen": "^2.9.6",
        "conventional-changelog-cli": "^1.3.5",
        "coveralls": "^3.0.0",
        "cz-conventional-changelog": "^2.1.0",
        "flow-bin": "^0.63.1",
        "lerna": "^2.5.1",
        "mocha": "^4.0.1",
        "nyc": "^11.3.0",
        "pre-commit": "^1.2.2",
        "source-map-support": "^0.5.0"
    },
    "scripts": {
        "commit": "git-cz",
        "changelog": "conventional-changelog -p angular -s -i CHANGELOG.md",
        "mocha": "mocha --require source-map-support/register --require babel-core/register",
        "build": "lerna exec -- babel src -d lib --source-maps --copy-files",

        "test": "yarn mocha \"packages-*/**/tests/**/*.test.js\"",
        "test:api": "yarn mocha \"packages-api/**/tests/**/*.test.js\"",
        "test:utils": "yarn mocha \"packages-utils/**/tests/**/*.test.js\"",
        "test:webiny-api": "yarn mocha \"packages-api/webiny-api/tests/**/*.test.js\"",
        "test:webiny-data-extractor": "yarn mocha \"packages-utils/webiny-data-extractor/tests/**/*.test.js\"",
        "test:webiny-model": "yarn mocha \"packages-api/webiny-model/tests/**/*.test.js\"",

        "coverage": "nyc --reporter=text yarn test:all",
        "coverage:wfs-local": "nyc --reporter=text --include packages-utils/webiny-file-storage-local yarn mocha \"packages-utils/webiny-file-storage-local/tests/**/*.test.js\"",
        "test:travis": "yarn build && nyc yarn test && nyc report --reporter=text-lcov | coveralls"
    },
    "pre-commit": [
    ],
    "nyc": {
        "include": [
            "packages-api/**/src",
            "packages-utils/**/src"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}

{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "contributors": [
    "Pavel Denisjuk <pavel@webiny.com>",
    "Sven Al Hamad <sven@webiny.com>",
    "Adrian Smijulj <adrian@webiny.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/webiny/webiny-js.git"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.0.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-lerna-changelog": "^1.2.1",
    "documentation": "^5.3.5",
    "dotenv": "^5.0.1",
    "env-ci": "2.0.1",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.3.0",
    "get-stream": "^3.0.0",
    "git-log-parser": "^1.2.0",
    "jest": "^23.1.0",
    "jest-extended": "^0.7.2",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "serverless-plugin-cloudfront-lambda-edge": "^2.0.0",
    "source-map-support": "^0.5.0",
    "webiny-semantic-release": "^1.1.2"
  },
  "scripts": {
    "build": "lerna run --parallel build",
    "ci": "yarn coverage --maxWorkers=4 && cat ./coverage/lcov.info | coveralls",
    "clear": "lerna exec -- rimraf lib",
    "client:watch": "lerna run --scope=webiny-client* --parallel --stream build:watch",
    "commit": "git-cz",
    "commit:check": "yarn lint-staged && yarn test",
    "coverage": "yarn test --coverage",
    "flow": "flow",
    "lint-staged": "lint-staged",
    "prettier": "prettier --config .prettierrc.js --write",
    "release": "scripts/release.js",
    "release:dry": "scripts/release.js --preview --branch=development",
    "release-private": "yarn build && node scripts/private --branch=development --require=babel-register",
    "release-private:dry": "node scripts/private --preview --branch=development --require=babel-register",
    "test": "jest"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "setupTestFrameworkScriptFile": "jest-extended",
    "testMatch": [
      "<rootDir>/packages/**/tests/**/*.test.js"
    ]
  }
}

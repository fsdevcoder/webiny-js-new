{
  "packages": [
    "packages/*",
    "components/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": ["scripts/**", ",**/__fixtures__/**", "**/__tests__/**", "**/*.md", "lerna.json"],
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "commitHooks": false,
      "message": "chore(release): %s"
    },
    "publish": {
      "contents": "dist",
      "createRelease": "github"
    }
  }
}

{
  "packages": [
    "packages/*",
    "components/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": ["scripts/**", ",**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
      "allowBranch": ["master", "refactor/scoped-packages"],
      "conventionalCommits": true,
      "message": "New release :tada: :rocket:"
    },
    "publish": {
      "contents": "dist",
      "registry": "http://localhost:4800",
      "createRelease": "github"
    }
  }
}
